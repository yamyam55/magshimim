<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.omer.projectapp.OptionsScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeWithUsername"
        android:height="35dp"
        android:width="500dp"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="25dp"/>

    <Button
        android:text="Convert Written Text To Computer Font"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CreateNewFont"
        android:layout_alignStart="@+id/CreateNewFont"
        android:layout_marginTop="39dp"
        android:id="@+id/ConvertWrittenTextToComputerFont"
        android:onClick="ConvertWrittenTextToComputerFontPress"/>

    <Button
        android:text="Change User Fonts Settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ConvertWrittenTextToComputerFont"
        android:layout_alignEnd="@+id/ConvertWrittenTextToComputerFont"
        android:layout_marginTop="37dp"
        android:id="@+id/ChangeUserFontsSettings"
        android:layout_alignStart="@+id/ConvertWrittenTextToComputerFont"
        android:onClick="ChangeUserFontsSettingsPress"/>

    <Button
        android:text="Create New Font"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/CreateNewFont"
        android:layout_below="@+id/WelcomeWithUsername"
        android:layout_centerHorizontal="true"
        android:onClick="CreateNewFontPress"/>

    <Button
        android:text="Change User Settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ChangeUserSettings"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/ChangeUserFontsSettings"
        android:layout_alignStart="@+id/ChangeUserFontsSettings"
        android:onClick="ChangeUserSettingsPress"/>
</RelativeLayout>
